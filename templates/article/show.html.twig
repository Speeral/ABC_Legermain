{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <h1>Article</h1>

    <table class="table table-hover table-borderless">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ article.id }}</td>
        </tr>
        <tr>
            <th>Titre</th>
            <td>{{ article.titre }}</td>
        </tr>
        <tr>
            <th>Texte</th>
            <td>{{ article.texte }}</td>
        </tr>
        <tr>
            <th>Image</th>
            <td>{{ article.image }}</td>
        </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('article_index') }}">back to list</a>

    {% if is_granted('ROLE_ADMIN') %}
        <a class="btn btn-primary" href="{{ path('article_edit', {'id': article.id}) }}">edit</a>
        {{ include('article/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
